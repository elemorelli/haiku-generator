---
import { SEO } from "astro-seo";
import "@fontsource/kosugi-maru";

export interface Props {
  title?: string;
}

const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.url).toString();
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es-AR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={title}
      twitter={{
        creator: "@elemorelli",
        site: "@elemorelli",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          type: "website",
          title: `Haiku Generator`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Haiku Generator Screenshot",
        },
      }}
    />
  </head>
  <body>
    <slot />

    <style is:global>
      html,
      body {
        margin: 0;
        height: 100%;
        width: 100%;
        font-family: "Kosugi Maru", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        user-select: none;
        overscroll-behavior-y: auto;
      }

      img {
        content-visibility: auto;
      }

      [x-cloak] {
        display: none;
      }

      input[type="number"]::-webkit-inner-spin-button,
      input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }

      input[type="number"] {
        -moz-appearance: textfield;
      }
    </style>
  </body>
</html>
